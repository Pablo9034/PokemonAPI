---
interface Props {
    id: number;
    name: string;
    isBig?: boolean;
}

const { id, name, isBig = false } = Astro.props;
const imageURL = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${ id }.png`;
---
<a href={ !isBig? `/pokemon/${ name }`: '' } class:list={[ "flex flex-col items-center rounded-md", 
    { "hover:bg-gray-300/10": !isBig }, 
    { "gap-y-10": isBig }
]}>
    <div class="flex flex-col items-center">
        <img transition:name={ `pokemon-img-${ name }` } src={ imageURL } alt={ `Image about ${ name }'s pokemon` } class:list={[
            { "size-16 lg:size-20": !isBig },
            { "size-64 lg:size-80": isBig }
        ]}/>
    
        <slot/>
    </div>

    <div class="w-fit mx-auto font-bold">
        {
            isBig
                ? <span class="text-xl lg:text-2xl"># { id } - </span>
                : null
        }
        <span class:list={[ "capitalize", { "text-xs lg:text-base": !isBig }, { "text-xl lg:text-2xl": isBig }]}>{ name }</span>
    </div>
</a>
